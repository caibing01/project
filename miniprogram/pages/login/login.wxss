.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 20px;
  margin-bottom: 20px;
}

.input-group {
  margin-bottom: 10px;
}

button {
  width: 100%;
  background-color: #007bff;
  color: white;
  border: none;
  padding: 10px;
  border-radius: 5px;
  cursor: pointer;
}

.switch {
  text-align: center;
  color: #007bff;
  margin-top: 10px;
  cursor: pointer;
}

.con {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  width: 100%;
}
.title {
  font-size: 70rpx;
  font-weight: bold;
	margin-bottom: 20rpx;
	text-align: center;
}
.user-info {
  background-color: #f0f0f0;
  padding: 20rpx;
  border-radius: 10rpx;
	width: 700rpx;
	text-align: center;
}
.info-item {
  display: flex;
  align-items: center;
	margin-bottom: 15rpx;
	justify-content: center;
}
.info-label {
  font-size: 30rpx;
  font-weight: bold;
  color: #666;
  width: 120rpx;
}
.info-value {
  flex: 1;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  border: 1rpx solid #ccc;
  padding: 10rpx;
  border-radius: 5rpx;
}
.button {
  background-color: #4caf50;
  color: white;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 5rpx;
  font-size: 50rpx;
  cursor: pointer;
  outline: none;
  width: 100%;
}
.button:hover {
  background-color: #45a049;
}
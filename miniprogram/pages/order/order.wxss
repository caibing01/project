.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}
.header {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 20px;
}
.form {
  width: 80%;
}
.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}
.label {
  width: 20%;
  font-size: 14px;
}
.picker {
  flex: 1;
  border: 1px solid #ccc;
  padding: 5px;
}
.input {
  flex: 1;
  border: 1px solid #ccc;
  padding: 5px;
}
.button {
  width: 100%;
  text-align: center;
  background-color: #007bff;
  color: #fff;
  padding: 10px 0;
  border-radius: 5px;
  cursor: pointer;
}
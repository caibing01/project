.img{
  width: 100%;
  height: 300rpx;
}
swiper{
  height: 310rpx;
}
.item{
  display:inline-block;
  flex: none;
  margin: 20rpx;
  height: 100rpx;
  margin-top: 50rpx;
}
.bar{
  white-space: nowrap;
  width: 100%;
  display: flex;
  height: 120rpx;
}
.news-bar{
  height: 300rpx;
}
.server{
  border: rgb(175, 187, 187) 2px solid;
  border-left:none;
  border-right:none;
  height: 50px;
  align-items: center;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  background-color: aliceblue;
}
.active{
  margin-top: 15rpx;
}
.news{
  margin-top: 15rpx;
}

.con {
  display: flex; 
  justify-content: space-between; 
  background-color: #f0f0f0; 
  padding: 10px; 
  border-radius: 8px; 
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); 
  margin-bottom: 20px; 
  margin-top: 30px;
}

.left-title, .right-title {
  flex: 1; 
  text-align: center; 
  padding: 10px; 
  background-color: #ffffff; 
  border-radius: 8px; 
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1); 
  cursor: pointer; 
  transition: all 0.3s ease; 
}

.item-img {
  width: 20px; 
  height: 20px; 
  margin-right: 5px; 
  vertical-align: middle; 
}

.left-title:hover, .right-title:hover {
  background-color: #f0f0f0; 
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); 
}

.content {
  width: 100%; 
  padding: 20px; 
  background-color: #ffffff; 
  border-radius: 8px; 
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1); 
  margin-top: 10px; 
}

.con {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f0f0f0;
}
.form {
  width: 80%;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}
.form-item {
  margin-bottom: 20rpx;
}
.form-item text {
  display: inline-block;
  width: 120rpx;
  font-size: 28rpx;
}
.form-item input {
  flex: 1;
  height: 60rpx;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  font-size: 28rpx;
}
.button {
  width: 100%;
  height: 80rpx;
  background-color: #4caf50;
  color: #fff;
  border: none;
  border-radius: 5rpx;
  font-size: 32rpx;
  cursor: pointer;
}
.button:hover {
  background-color: #45a049;
}
.message {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #ff0000;
}
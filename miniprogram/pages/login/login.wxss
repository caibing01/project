.con {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 1050rpx;
  background-color: #f0f0f0;
}
.form {
  width: 80%;
}
.form-item {
  margin-bottom: 20rpx;
}
.label {
  font-size: 30rpx;
}
input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #333;
  border-radius: 5rpx;
  padding: 10rpx;
}
.btn-login {
  width: 100%;
  height: 80rpx;
  background-color: #4caf50;
  color: #fff;
  border: none;
  border-radius: 5rpx;
  font-size: 32rpx;
  cursor: pointer;
}
.btn-login:hover {
  background-color: #45a049;
}
.regiest, .repass {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #333;
  text-decoration: underline;
  cursor: pointer;
}
<!-- pages/register/register.wxml -->
<view class="container">
  <form bindsubmit="register" class="form">
    <view class="form-item">
      <text class="label">用户名：</text>
      <input type="text" name="username" placeholder="请输入用户名" />
    </view>
    <view class="form-item">
      <text class="label">手机号：</text>
      <input type="number" name="phoneNumber" placeholder="请输入手机号" />
    </view>
    <view class="form-item">
      <text class="label">邮箱：</text>
      <input type="text" name="email" placeholder="请输入邮箱" />
    </view>
    <view class="form-item">
      <text class="label">密码：</text>
      <input type="password" name="password" placeholder="请输入密码" />
    </view>
    <view class="form-item">
      <text class="label">确认密码：</text>
      <input type="password" name="confirmPassword" placeholder="请再次输入密码" />
    </view>
    <button form-type="submit" class="btn-register">注册</button>
  </form>
</view>

<view class="con">
  <view class="form">
    <view class="form-item">
      <text>用户名:</text>
      <input type="text" placeholder="请输入用户名" bindinput="bindUsernameInput"/>
    </view>
    <view class="form-item">
      <text>新密码:</text>
      <input type="password" placeholder="请输入新密码" bindinput="bindPasswordInput"/>
    </view>
    <button class="button" bindtap="resetPassword">重置密码</button>
  </view>
  <view class="message">{{message}}</view>
</view>